<div class = "edit">

  <form method="put" action="/users/edit">

    <div>
      <label>Username:</label>
      <input type="text" name="users[username]" value="<%= @user && @user.username %>">
    </div>
    <div>
      <label>First Name:</label>
      <input type="text" name="users[first_name]" value="<%= @user && @user.first_name %>">
    </div>
    <div>
      <label>Last Name:</label>
      <input type="text" name="users[last_name]" value="<%= @user && @user.last_name %>">
    </div>
    <div>
      <label>Email:</label>
      <input type="text" name="users[email]" value="<%= @user && @user.email %>">   
    </div>
    <div>
      <label>Password:</label>
      <input type="password" name="users[password]">   
    </div>
    <div>
      <label>Home City/Town:</label>
      <input type="text" name="location[city]" >   
    </div>
    <div>
      <label>Country:</label>
      <input type="text" name="location[country]" >   
    </div>   
    <div>
    <input type="submit" value="Submit">
    </div>

  </form>

</div>