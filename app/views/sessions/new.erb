<div>

 <h2>Please login to your account.</h2>
 <p>Enter you username and password below!</p>

 <form action="/sessions" method="post">
   <div>
     <label>Username:</label>
     <input type="text" name="username" value="<%= @user && @user.username %>">
   </div>
   <div>
     <label>Password:</label>
     <input type="password" name="password">
   </div>
   <div>
     <button type="submit" class="btn btn-primary">Sign me in!></button>
   </div>
 </form>

 <% if @error %>
 <p><%= @error %></p>
 <% end %>

 <div>
  <p id="sub-text">Don't have an account?</p>
  <a href="/users/new">Click here to SIGNUP</a>
 </div>

</div>